<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabTrack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ocean</item>
        <item name="colorPrimaryVariant">@color/ocean_dark</item>
        <item name="colorOnPrimary">@color/beige_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/ocean_dark</item>
        <item name="android:colorBackgroundFloating">@color/beige</item>
        <item name="controlBackground">@color/beige</item>

        <!-- Window colors -->
        <item name="android:colorForeground">@color/beige</item>
        <item name="android:colorForegroundInverse">@color/ocean_dark</item>
        <item name="android:colorBackground">@color/beige_light</item>
        <item name="android:colorBackgroundCacheHint">@color/ocean</item>
        <item name="android:windowBackground">@color/taupe</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/ocean_dark</item>
        <item name="android:textColorPrimary">@color/ocean_dark</item>
        <item name="android:textColorPrimaryInverse">@color/ocean_dark</item>
        <item name="android:textColorPrimaryDisableOnly">@color/ocean_dark</item>
        <item name="android:textColorSecondary">@color/ocean</item>
        <item name="android:textColorSecondaryInverse">@color/ocean</item>
        <item name="android:textColorHighlight">@color/ocean_light</item>
        <item name="android:textColorHighlightInverse">@color/ocean_dark</item>
        <item name="android:textColorAlertDialogListItem">@color/beige</item>

        <item name="android:editTextBackground">@drawable/custom_input</item>
        <item name="android:editTextColor">@color/ocean_dark</item>

    </style>

    <style name="Theme.HabTrack.NoActionBar">
        <item name="colorPrimary">@color/ocean</item>
        <item name="colorPrimaryVariant">@color/ocean_dark</item>
        <item name="colorOnPrimary">@color/beige_light</item>

        <item name="colorAccent">@color/ocean_dark</item>
        <item name="android:colorBackgroundFloating">@color/beige</item>
        <item name="controlBackground">@color/beige</item>

        <!-- Window colors -->
        <item name="android:colorForeground">@color/beige</item>
        <item name="android:colorForegroundInverse">@color/ocean_dark</item>
        <item name="android:colorBackground">@color/beige_light</item>
        <item name="android:colorBackgroundCacheHint">@color/ocean</item>
        <item name="android:windowBackground">@color/taupe</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/ocean_dark</item>
        <item name="android:textColorPrimary">@color/ocean_dark</item>
        <item name="android:textColorPrimaryInverse">@color/ocean_dark</item>
        <item name="android:textColorPrimaryDisableOnly">@color/ocean_dark</item>
        <item name="android:textColorSecondary">@color/ocean</item>
        <item name="android:textColorSecondaryInverse">@color/ocean</item>
        <item name="android:textColorHighlight">@color/ocean_light</item>
        <item name="android:textColorHighlightInverse">@color/ocean_dark</item>
        <item name="android:textColorAlertDialogListItem">@color/beige</item>

        <item name="android:editTextBackground">@drawable/custom_input</item>
        <item name="android:editTextColor">@color/ocean_dark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.HabTrack.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HabTrack.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>